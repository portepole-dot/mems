        .log-success { color: var(--toxic-green); text-shadow: 0 0 5px var(--toxic-green); }

        /* Alarm State */
        body.alarm-state {
            animation: alarmFlash 2s infinite;
        }

        @keyframes alarmFlash {
            0%, 100% { box-shadow: inset 0 0 0px var(--red-alert); }
            50% { box-shadow: inset 0 0 40px var(--red-alert); }
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.3; }
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(5px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Custom Scrollbar for Terminal */
