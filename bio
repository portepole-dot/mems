            text-shadow: 0 0 5px var(--toxic-green);
        }

        /* Buttons */
        .btn {
            background: transparent;
            color: var(--aqua);
            border: 1px solid var(--aqua);
            padding: 15px;
            margin-bottom: 15px;
            font-family: var(--font-main);
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
        }

        .btn:hover {
            background: var(--aqua-dim);
            box-shadow: 0 0 15px var(--aqua);
        }

        .btn:active {
            transform: scale(0.98);
        }

        .btn-shock { border-color: var(--gold); color: var(--gold); }
        .btn-shock:hover { background: rgba(255, 191, 0, 0.2); box-shadow: 0 0 15px var(--gold); }

        .btn-breach { border-color: var(--red-alert); color: var(--red-alert); }
        .btn-breach:hover { background: rgba(255, 0, 51, 0.2); box-shadow: 0 0 15px var(--red-alert); }

        .btn-flush { border-color: var(--toxic-green); color: var(--toxic-green); }
