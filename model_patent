    <script>
        /**
         * ====================================================================
         * [CLASSIFIED] CTRNN MEMS Physics Engine & Signal Processor
         * Derived from US Patent 2026/0050780 A1
         * ====================================================================
         * Mathematical core:
         * Effective Stiffness (k_eff) = k_m - c * V_m^2
         * Resonant Frequency (w_eff) = sqrt(k_eff / mass)
         * State equation: tau * dx/dt = -x + f(W*x + Input) 
         * ====================================================================
         */

        // -----------------------------------------
        // GLOBAL STATE ARCHITECTURE
        // -----------------------------------------
        const SystemState = {
            time: 0,
            
            // Physical properties
            mass: 1.0,
            baseStiffness: 0.01,    // k_m
            electrostaticConst: 0.0000008, // c
            damping: 0.02,          // Inversely proportional to Q-factor
            
            // Dynamic variables
            vm: 0,                  // Tuning Voltage (0-100)
            temp: 20,               // Thermal Drift (-50 to 75 C)
            
            // Frequencies
            targetFreq: 0.065,      // Hidden submarine propeller signature
            effFreq: 0.1,           // Current mechanical resonant frequency
            
            // Status flags
            vacuumBreached: false,
            pullInTriggered: false,
            empWipe: 0,             // EMP recovery state
            
            // Calculated outputs
            lockFactor: 0,          // 0 to 1 (Phase lock with target)
            massDisplacement: 0,    // Visual position of the MEMS mass
            staticDisplacement: 0,  // Pull towards electrode due to Vm
            
            // Signal History arrays
            signals: {
                raw: [],
                target: [],
                output: []
            }
        };

        // DOM Elements
        const DOM = {
            vmSlider: document.getElementById('vm-slider'),
            vmVal: document.getElementById('vm-val'),
            tempSlider: document.getElementById('temp-slider'),
            tempVal: document.getElementById('temp-val'),
            btnEmp: document.getElementById('btn-emp'),
            btnVacuum: document.getElementById('btn-vacuum'),
            alertOverlay: document.getElementById('alert-overlay'),
            empFlash: document.getElementById('emp-flash'),
            lockStatus: document.getElementById('lock-status'),
            qFactorVal: document.getElementById('q-factor-val'),
            sysStatusText: document.getElementById('sys-status-text'),
            sysStatusDot: document.getElementById('sys-status-dot')
        };

        // -----------------------------------------
        // PHYSICS ENGINE TICK (Runs at 60 FPS via p5 draw)
        // -----------------------------------------
        function updatePhysicsStep() {
            if (SystemState.pullInTriggered) return; // Hardware destroyed

            SystemState.time += 1;

            // 1. Environmental Effects
            // Thermal drift alters physical silicon stiffness
            let thermalOffset = (SystemState.temp - 20) * 0.00005; 
            let currentBaseStiffness = SystemState.baseStiffness + thermalOffset;

            // 2. Electrostatic Spring Softening
            // k_eff = k_m - c * V_m^2
            let electrostaticForce = SystemState.electrostaticConst * Math.pow(SystemState.vm, 2);
            let effectiveStiffness = currentBaseStiffness - electrostaticForce;

            // 3. Vulnerability 1: Pull-in Instability Check
            // If Vm > critical threshold (~92%), electrostatic force overcomes mechanical restoring force.
            if (SystemState.vm > 92 || effectiveStiffness <= 0) {
                triggerPullIn();
                return;
            }

            // 4. Calculate Effective Resonant Frequency
            // w = sqrt(k/m)
            SystemState.effFreq = Math.sqrt(effectiveStiffness / SystemState.mass);

            // Calculate static displacement (mass pulled towards electrode by DC voltage)
            SystemState.staticDisplacement = electrostaticForce * 10000;

            // 5. Signal Processing & Target Lock
            // CTRNN attempts to phase-lock onto the target frequency
            let freqDiff = Math.abs(SystemState.effFreq - SystemState.targetFreq);
            let tolerance = 0.004; // Very narrow tuning window
            
            let targetLock = Math.max(0, 1 - (freqDiff / tolerance));
            
            // 6. Vulnerability 3: Squeeze-Film Damping (Vacuum Breach)
            if (SystemState.vacuumBreached) {
                SystemState.damping = 0.9; // Massive damping increase
                targetLock *= 0.05;        // Instantly lose lock due to low Q
                DOM.qFactorVal.innerText = "CRITICALLY LOW (DAMPED)";
                DOM.qFactorVal.style.color = "var(--red)";
            }

            // EMP Wipe Effect (gradually recovers)
            if (SystemState.empWipe > 0) {
                targetLock = 0;
                SystemState.empWipe -= 0.02;
                if (SystemState.empWipe < 0) SystemState.empWipe = 0;
            }

            // Smooth the lock factor for visual transitions
            SystemState.lockFactor += (targetLock - SystemState.lockFactor) * 0.1;

            // Update UI Lock Status
            if (SystemState.lockFactor > 0.8) {
                DOM.lockStatus.innerText = "LOCKED: TARGET IDENTIFIED";
                DOM.lockStatus.style.color = "var(--cyan)";
                DOM.lockStatus.style.textShadow = "0 0 10px var(--cyan)";
            } else if (SystemState.lockFactor > 0.2) {
                DOM.lockStatus.innerText = "ACQUIRING...";
                DOM.lockStatus.style.color = "var(--amber)";
                DOM.lockStatus.style.textShadow = "none";
            } else {
                DOM.lockStatus.innerText = "SEARCHING (NOISE)";
                DOM.lockStatus.style.color = "var(--text-dim)";
                DOM.lockStatus.style.textShadow = "none";
            }

            // 7. Calculate Oscillation (Visual Mass Displacement)
            // If locked, oscillates at high amplitude matching target. Otherwise, random low amplitude noise.
            let oscillationAmplitude = SystemState.vacuumBreached ? 2 : (20 + (SystemState.lockFactor * 30));
            
            // Base oscillation attempts to run at effFreq
            let baseOscillation = Math.sin(SystemState.time * SystemState.effFreq) * oscillationAmplitude;
            // Add chaos if not locked
            let chaos = (Math.random() - 0.5) * 10 * (1 - SystemState.lockFactor);
            
            SystemState.massDisplacement = baseOscillation + chaos;

            generateSignalData();
        }

        // -----------------------------------------
        // SIGNAL GENERATION
        // -----------------------------------------
        function generateSignalData() {
            let t = SystemState.time;
            
            // Ground Truth Submarine Signal (Low Frequency Sine)
            let truth = Math.sin(t * SystemState.targetFreq) * 40;
            
            // Raw Ocean Acoustics (Heavy Gaussian Noise over the Truth)
            let noise = (Math.random() - 0.5) * 120 + Math.sin(t * 0.2) * 10;
            let rawInput = truth * 0.5 + noise;

            // Output Signal of the MEMS CTRNN
            let output = 0;
            if (SystemState.pullInTriggered) {
                output = 0; // Flatline
            } else if (SystemState.empWipe > 0 || SystemState.vacuumBreached) {
                // Just outputs filtered noise
                output = Math.sin(t * SystemState.effFreq) * 10 + (Math.random() - 0.5) * 20;
            } else {
                // When locked, output beautifully aligns with the truth and filters noise
                let lockedSignal = truth;
                let huntingSignal = Math.sin(t * SystemState.effFreq) * 30 + (Math.random() - 0.5) * 15;
                
                output = (lockedSignal * SystemState.lockFactor) + (huntingSignal * (1 - SystemState.lockFactor));
            }

            SystemState.signals.raw.push(rawInput);
            SystemState.signals.target.push(truth);
            SystemState.signals.output.push(output);

            // Keep arrays constrained to canvas width (approx 800px)
            let maxLen = 800;
            if (SystemState.signals.raw.length > maxLen) {
                SystemState.signals.raw.shift();
                SystemState.signals.target.shift();
                SystemState.signals.output.shift();
            }
        }

        // -----------------------------------------
        // VULNERABILITY TRIGGERS
        // -----------------------------------------
        function triggerPullIn() {
            SystemState.pullInTriggered = true;
            DOM.alertOverlay.style.display = 'flex';
            DOM.sysStatusText.innerText = "SYSTEM OFFLINE";
            DOM.sysStatusText.style.color = "var(--red)";
            DOM.sysStatusDot.style.backgroundColor = "var(--red)";
            DOM.sysStatusDot.style.boxShadow = "0 0 10px var(--red)";
            
            // Force mass to snap to electrode
            SystemState.massDisplacement = 80; // Hardcoded snap position relative to draw logic
            SystemState.staticDisplacement = 0;
            
            // Flatline signals
            for(let i=0; i<10; i++) generateSignalData();
        }

        DOM.btnEmp.addEventListener('click', () => {
            if(SystemState.pullInTriggered) return;
            
            // Visual Flash
            DOM.empFlash.style.opacity = '1';
            setTimeout(() => { DOM.empFlash.style.opacity = '0'; }, 150);

            // Physics Wipe
            SystemState.empWipe = 1.0;
            
            // Reset FPAA Voltage to 0 (Wipe memory)
            SystemState.vm = 0;
            DOM.vmSlider.value = 0;
            DOM.vmVal.innerText = "0.0";
        });

        DOM.btnVacuum.addEventListener('click', () => {
            if(SystemState.pullInTriggered) return;
            SystemState.vacuumBreached = true;
            DOM.btnVacuum.style.backgroundColor = "var(--amber)";
            DOM.btnVacuum.style.color = "#000";
            DOM.btnVacuum.innerText = "VACUUM COMPROMISED";
        });

        // -----------------------------------------
        // EVENT LISTENERS (UI)
        // -----------------------------------------
        DOM.vmSlider.addEventListener('input', (e) => {
            if(SystemState.pullInTriggered) return;
            SystemState.vm = parseFloat(e.target.value);
            DOM.vmVal.innerText = SystemState.vm.toFixed(1);
        });

        DOM.tempSlider.addEventListener('input', (e) => {
            if(SystemState.pullInTriggered) return;
            SystemState.temp = parseInt(e.target.value);
            DOM.tempVal.innerText = SystemState.temp;
        });


        // ====================================================================
        // P5.JS INSTANCE 1: TACTICAL SIGNAL PROCESSING (OSCILLOSCOPE)
        // ====================================================================
        const sketchSignals = (p) => {
            let canvasParent;

            p.setup = () => {
                canvasParent = document.getElementById('canvas-signals');
                let canvas = p.createCanvas(canvasParent.clientWidth, canvasParent.clientHeight);
                canvas.parent('canvas-signals');
                p.frameRate(60);
            };

            p.windowResized = () => {
                p.resizeCanvas(canvasParent.clientWidth, canvasParent.clientHeight);
            };

            p.draw = () => {
                // Run master physics step here
                updatePhysicsStep();

                p.background(7, 7, 10);
                drawGrid(p);

                let midY = p.height / 2;
                let w = p.width;
                let signals = SystemState.signals;
                let len = signals.raw.length;

                if (len === 0) return;

                // X-axis mapping: draw from right to left so it scrolls
                let stepX = w / 800; // max length

                // 1. Draw Raw Input (Heavy Noise) - Dim Gray
                p.noFill();
                p.stroke(80, 80, 90, 150);
                p.strokeWeight(1);
                p.beginShape();
                for (let i = 0; i < len; i++) {
                    let x = w - (len - i) * stepX;
                    p.vertex(x, midY - signals.raw[i]);
                }
                p.endShape();

                // 2. Draw Ground Truth Target - Faint Magenta
                p.stroke(176, 0, 255, 100);
                p.strokeWeight(2);
                p.drawingContext.setLineDash([5, 10]); // Dashed line
                p.beginShape();
                for (let i = 0; i < len; i++) {
                    let x = w - (len - i) * stepX;
                    p.vertex(x, midY - signals.target[i]);
                }
                p.endShape();
                p.drawingContext.setLineDash([]); // Reset

                // 3. Draw MEMS Output - Neon Cyan
                p.stroke(0, 229, 255);
                p.strokeWeight(2);
                
                // Add Glow Effect
                p.drawingContext.shadowBlur = 10;
                p.drawingContext.shadowColor = '#00E5FF';
                
                if (SystemState.pullInTriggered) {
                    p.stroke(255, 0, 60); // Turns red on flatline
                    p.drawingContext.shadowColor = '#FF003C';
                }

                p.beginShape();
                for (let i = 0; i < len; i++) {
                    let x = w - (len - i) * stepX;
                    p.vertex(x, midY - signals.output[i]);
                }
                p.endShape();
                
                // Reset Glow
                p.drawingContext.shadowBlur = 0;

                // Draw Overlay Info
                p.fill(0, 229, 255, 200);
                p.noStroke();
                p.textSize(10);
                p.textFont('monospace');
                p.text("RAW INPUT: OCN_ACOUSTIC_NOISE", 10, 20);
                p.fill(176, 0, 255, 200);
                p.text("TARGET: LOW_FREQ_SIGNATURE", 10, 35);
                p.fill(0, 229, 255);
                p.text("OUTPUT: MEMS_CTRNN_FILTER", 10, 50);
            };

            function drawGrid(p) {
                p.stroke(26, 32, 44);
                p.strokeWeight(1);
                for(let x = 0; x < p.width; x += 50) { p.line(x, 0, x, p.height); }
                for(let y = 0; y < p.height; y += 50) { p.line(0, y, p.width, y); }
                
                // Center line
                p.stroke(0, 229, 255, 50);
                p.line(0, p.height/2, p.width, p.height/2);
            }
        };

        // ====================================================================
        // P5.JS INSTANCE 2: MEMS PHYSICS VISUALIZATION
        // ====================================================================
        const sketchMEMS = (p) => {
            let canvasParent;
            let sparks = [];

            p.setup = () => {
                canvasParent = document.getElementById('canvas-mems');
                let canvas = p.createCanvas(canvasParent.clientWidth, canvasParent.clientHeight);
                canvas.parent('canvas-mems');
            };

            p.windowResized = () => {
                p.resizeCanvas(canvasParent.clientWidth, canvasParent.clientHeight);
            };

            class Spark {
                constructor(x, y) {
                    this.x = x;
                    this.y = y;
                    this.vx = p.random(-8, -2);
                    this.vy = p.random(-5, 5);
                    this.life = 255;
                }
                update() {
                    this.x += this.vx;
                    this.y += this.vy;
                    this.vy += 0.2; // gravity
                    this.life -= 8;
                }
                draw() {
                    p.noStroke();
                    p.fill(255, p.random(100,200), 0, this.life);
                    p.rect(this.x, this.y, 3, 3);
                }
            }

            p.draw = () => {
                p.background(10, 10, 15);
                
                let w = p.width;
                let h = p.height;
                let midY = h / 2;

                // Dimensions
                let anchorX = 40;
                let massW = 60;
                let massH = 60;
                let electrodeX = w - 40;
                
                // Calculate Mass Position
                // Base position + Static displacement from Vm + Dynamic oscillation
                let massBaseX = 150; 
                let currentMassX = massBaseX + SystemState.staticDisplacement + SystemState.massDisplacement;
                
                // Enforce physical boundary (Electrode)
                let maxMassX = electrodeX - massW - 5;
                if (currentMassX > maxMassX) {
                    currentMassX = maxMassX;
                }

                // 1. Draw Anchor (Left)
                p.fill(50, 50, 60);
                p.stroke(100);
                p.strokeWeight(2);
                p.rect(10, midY - 40, anchorX - 10, 80);
                
                // Draw hashes on anchor
                p.stroke(20);
                for(let y = midY - 35; y < midY + 40; y+=8) {
                    p.line(15, y, anchorX - 5, y+5);
                }

                // 2. Draw Electrode (Right) - High Voltage Area
                p.fill(30, 10, 10);
                if (SystemState.vm > 0 && !SystemState.pullInTriggered) {
                    // Glow based on Vm
                    p.drawingContext.shadowBlur = SystemState.vm * 0.5;
                    p.drawingContext.shadowColor = '#FFB300';
                    p.stroke(255, 179, 0, 150 + SystemState.vm);
                } else {
                    p.stroke(80, 0, 0);
                }
                p.rect(electrodeX, midY - 50, 30, 100);
                p.drawingContext.shadowBlur = 0; // reset
                
                // Electrode warning stripes
                p.stroke(255, 179, 0, 100);
                for(let y = midY - 45; y < midY + 50; y+=10) {
                    p.line(electrodeX, y, electrodeX + 25, y+10);
                }

                // 3. Draw Spring (Silicon flexure)
                p.noFill();
                let springColor = p.lerpColor(p.color(0, 229, 255), p.color(255, 179, 0), SystemState.vm / 100);
                
                p.stroke(springColor);
                p.strokeWeight(3);
                
                if (SystemState.vm > 50 && !SystemState.pullInTriggered) {
                    p.drawingContext.shadowBlur = 10;
                    p.drawingContext.shadowColor = springColor.toString();
                }
                
                p.beginShape();
                p.vertex(anchorX, midY);
                let numCoils = 10;
                let springLen = currentMassX - anchorX;
                let coilWidth = springLen / numCoils;
                for (let i = 0; i < numCoils; i++) {
                    let cx = anchorX + i * coilWidth;
                    p.vertex(cx + coilWidth * 0.25, midY - 20);
                    p.vertex(cx + coilWidth * 0.75, midY + 20);
                }
                p.vertex(currentMassX, midY);
                p.endShape();
                p.drawingContext.shadowBlur = 0; // reset

                // 4. Draw Mass (The "Neuron")
                p.fill(20, 25, 35);
                p.stroke(0, 229, 255);
                if (SystemState.pullInTriggered) {
                    p.stroke(255, 0, 60);
                    p.fill(40, 0, 10);
                }
                p.strokeWeight(2);
                p.rect(currentMassX, midY - massH/2, massW, massH, 5);

                // Circuit details on mass
                p.stroke(0, 229, 255, 100);
                p.line(currentMassX + 10, midY - 15, currentMassX + massW - 10, midY - 15);
                p.line(currentMassX + 10, midY + 15, currentMassX + massW - 10, midY + 15);
                p.fill(0, 229, 255, 50);
                p.circle(currentMassX + massW/2, midY, 15);

                // 5. Annotations
                p.noStroke();
                p.fill(150);
                p.textSize(10);
                p.textFont('monospace');
                p.text("ANCHOR", 12, midY - 50);
                p.text("V_m ELECTRODE", electrodeX - 10, midY - 60);
                
                let k_eff_pct = Math.max(0, 100 - (SystemState.vm * SystemState.vm / 100));
                p.fill(springColor);
                p.text(`k_eff: ${k_eff_pct.toFixed(1)}%`, anchorX + 20, midY + 40);

                // 6. Handle Pull-In Explosion (Sparks)
                if (SystemState.pullInTriggered) {
                    // Generate sparks at impact point
                    if (p.frameCount % 2 === 0 && sparks.length < 50) {
                        for(let i=0; i<5; i++) {
                            sparks.push(new Spark(currentMassX + massW, midY + p.random(-20, 20)));
                        }
                    }
                    
                    // Update and draw sparks
                    for (let i = sparks.length - 1; i >= 0; i--) {
                        sparks[i].update();
                        sparks[i].draw();
                        if (sparks[i].life <= 0) sparks.splice(i, 1);
                    }
                }
            };
        };

        // Instantiate p5 sketches
        new p5(sketchSignals);
        new p5(sketchMEMS);

    </script>
</body>
</html>
